<h1>Create an article</h1>

<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |t| %>

<div class="field">
  <%= t.label :title %><br>
  <%= t.text_field :title %>
</div>

<div class="field">
  <%= t.label :description %><br>
  <%= t.text_area :description %>
</div>

<div class="action">
  <%= t.submit %>
</div>

<% end %>

<%= link_to 'Back to projects', '/' %>
