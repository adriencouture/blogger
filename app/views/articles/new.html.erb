<h1>Create an article</h1>

<%= form_for @article do |t| %>

<div class="field">
  <%= t.label :title %>
  <%= t.text_field :title %>
</div>

<div class="field">
  <%= t.label :description %>
  <%= t.text_area :description %>
</div>

<div class="action">
  <%= t.submit 'Create Article'%>
</div>

<% end %>
